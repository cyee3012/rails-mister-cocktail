<div class="container">
  <h1>add a new cocktail!</h1>

  <%= simple_form_for (@cocktail) do |f| %>
   <%= f.input :name %>
   <%= f.input :photo, as: :file %>
   <%= f.button :submit, 'add cocktail', class: "btn btn-flat" %>
  <% end %>

  <%= link_to "back to cocktail list", cocktails_path  %>
</div>

