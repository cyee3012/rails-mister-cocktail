<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<h2>Ingredients</h2>

<ul>
<% @doses.each do |dose| %>
  <li><%= dose.ingredient.name %> (<%= dose.description %>)
    <%= link_to "remove?",
      dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
<% end %>

</ul>

<h4><%= link_to "Add indregient", new_cocktail_dose_path(@cocktail) %></h4>
<%= link_to "Back to cocktail list", cocktails_path  %>
