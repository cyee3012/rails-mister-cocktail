<div class="container">
  <h1>add stuff you need for "<%= @cocktail.name.downcase %>"</h1>
  <%= simple_form_for [ @cocktail, @dose ] do |f| %>
   <%= f.association :ingredient %>
   <%= f.input :description %>
   <%= f.button :submit, 'add dose', class: "btn btn-flat" %>
  <% end %>

  <%= link_to "back to #{@cocktail.name.downcase}" , cocktail_path(@cocktail) %><br>
  <%= link_to "back to cocktail list", cocktails_path  %>
</div>
